{
	"verbose": true,
	"testPathDirs": [
		"<rootDir>/spec/"
	],
	"moduleNameMapper": {
		"\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/spec/support/file-mock.js",
		"\\.(css|less|scss)$": "<rootDir>/spec/support/style-mock.js"
	},
	"setupFiles": [
		"<rootDir>/spec/support/tests-setup.js"
	],
	"coverageDirectory": "<rootDir>/reports/coverage",
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"<rootDir>/spec/support"
	]
}
